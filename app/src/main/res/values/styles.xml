<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UtilsDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--buttons color-->
        <item name="colorAccent">@color/instacolcor</item>
        <item name="android:windowBackground">@color/dialogBoxBackgroundColor</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/instacolcor</item>
    </style>

       <style name="UtilsDialogThemes" parent="Theme.AppCompat.Light.Dialog">
    <!--buttons color-->
    <item name="colorAccent">@color/black</item>
    <!--title and message color-->
    <!--<item name="android:textColorPrimary">@color/secondaryTextColor</item>-->
    <!--dialog background-->
    <item name="android:textColor">@color/instacolcor</item>
    <item name="android:windowBackground">@color/WHITE</item>
    <item name="android:textStyle">bold</item>
    <item name="windowFixedWidthMajor">90%</item>
    <item name="windowFixedWidthMinor">90%</item>
</style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:windowBackground">@color/dialogBoxBackgroundColor</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>
</resources>